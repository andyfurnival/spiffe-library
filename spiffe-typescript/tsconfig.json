{
  "compilerOptions": {
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "skipLibCheck": true,
    "target": "es2020",
    "lib": ["es6",  "es2016", "es2017", "es2018", "es2019", "es2020"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/*"
  ],
  "exclude": [

  ]
}
